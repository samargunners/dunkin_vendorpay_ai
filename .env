# VendorPay AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration - REPLACE WITH YOUR ACTUAL VALUES
SUPABASE_URL=https://demo-project.supabase.co
SUPABASE_ANON_KEY=demo_anon_key_replace_with_real_key
SUPABASE_SERVICE_ROLE_KEY=demo_service_role_key_replace_with_real_key

# Database Configuration (if using direct PostgreSQL connection)
DATABASE_URL=postgresql://username:password@localhost:5432/vendorpay_ai

# Application Configuration
ENVIRONMENT=development
SECRET_KEY=development_secret_key_change_in_production
LOG_LEVEL=INFO

# Document Storage Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls,jpg,jpeg,png,tiff

# OCR Configuration
TESSERACT_CMD=tesseract
TESSERACT_CONFIG=--oem 3 --psm 6

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Development Configuration
DEBUG=true
TESTING=false

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# External API Keys (for future integrations)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox